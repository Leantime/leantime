{% extends layoutFile %}

{% block pageheader %}
    {{ dispatchEvent('beforePageHeaderOpen') }}
    <div class="pageheader">
        {{ dispatchEvent('afterPageHeaderOpen') }}
        <div class="pageicon"><x-icon id="home"></x-icon></div>
        <div class="pagetitle">
            <h1>{{ __('headlines.home') }}</h1>
        </div>
        {{ dispatchEvent('afterPageHeaderClose') }}
    </div>
    {{ dispatchEvent('afterPageHeaderClose') }}
{% endblock %}

{% block maincontent %}
    {{ displayNotification() }}

    <div class="row">
        <div class="col-md-12">
            <div class="maincontentinner">
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="todaysDate" style="padding-bottom:5px;"></h3>
                        <h1 class="articleHeadline">{{ __('text.hi') }} {{ currentUser.firstname }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End .row -->
    <div class="row">
        <div class="col-md-8">
            <div class="maincontentinner">
                <div class="row" id="yourToDoContainer">
                    <div class="col-md-12">
                        {% if currentUser.role > roles.editor %}
                            <a href="javascript:void(0);" class="quickAddLink" id="ticket_new_link" onclick="jQuery('#ticket_new').toggle('fast', function() {jQuery(this).find('input[name=headline]').focus();}); jQuery(this).toggle('fast');"><i class="fas fa-plus-circle"></i> <?php echo $this->__("links.quick_add_todo"); ?></a>
                            <div class="ticketBox hideOnLoad" id="ticket_new" style="padding:10px;">

                                <form method="post" class="form-group">
                                    <input name="headline" type="text" title="<?php echo $this->__("label.headline"); ?>" style="width:100%" placeholder="<?php echo $this->__("input.placeholders.what_are_you_working_on"); ?>" />
                                    <input type="submit" value="<?php echo $this->__("buttons.save"); ?>" name="quickadd"  />
                                    <input type="hidden" name="dateToFinish" id="dateToFinish" value="" />
                                    <input type="hidden" name="status" value="3" />
                                    <input type="hidden" name="sprint" value="<?php echo $_SESSION['currentSprint']; ?>" />
                                    <a href="javascript:void(0);" onclick="jQuery('#ticket_new').toggle('fast'); jQuery('#ticket_new_link').toggle('fast');">
                                        <?php echo $this->__("links.cancel"); ?>
                                    </a>
                                </form>

                                <div class="clearfix"></div>
                                <br /><br />
                            </div>
                        {% endif %}

                        <div class="marginBottomMd">
                            <form method="get" >
                                <div class="pull-left">
                                <h5 class="subtitle">{{ __('headlines.your_todos') }}</h5>
                                </div>

                                <div class="btn-group viewDropDown right">
                                    <button class="btn dropdown-toggle " type="button" data-toggle="dropdown">{{ __("links.group_by") }}</button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <span class="radio">
                                                <input type="radio" name="groupBy" {% if groupby == 'time' %} checked='checked' {% endif %} value="time" id="groupByDate" onclick="form.submit();"/>
                                                <label for="groupByDate">{{ __('label.dates') }}</label>
                                            </span>
                                        </li>
                                        <li>
                                            <span class="radio">
                                                <input type="radio" name="groupBy" {% if groupby == 'project' %} checked='checked' {% endif %} value="project" id="groupByProject" onclick="form.submit();"/>
                                                <label for="groupByProject">{{ __('label.project') }}</label>
                                            </span>
                                        </li>
                                    </ul>
                                </div>
                                <div class="right">
                                    <label class="inline">{{ __('label.show') }}</label>
                                    <select name="projectFilter" onchange="form.submit();">
                                        <option value="">{{ __('labels.all_projects') }}</option>
                                        {% for project in projects %}
                                            <option
                                                value="{{ project.id }}"
                                                {% if projectFilter == project.id %}
                                                    selected="selected"
                                                {% endif %}
                                            >{{ project.name|e }}</option>
                                        {% endfor %}
                                    </select>
                                    &nbsp;
                                </div>
                                <div class="clearall"></div>
                            </form>
                        </div>

                        {% if tickets is not empty %}
                            <div class='center'>
                                <div  style='width:30%' class='svgContainer'>
                                    {{ getSvg('undraw_a_moment_to_relax_bbpa.svg') }}
                                </div>
                                <br />
                                <h4>{{ __("headlines.no_todos_this_week") }}</h4>
                                {{ __("text.take_the_day_off") }}
                                <a href='{{ site.base_url }}/tickets/showAll'>{{ __("links.goto_backlog") }}</a>
                                <br/><br/>
                            </div>
                        {% endif %}

                        {% if tickets is not empty %}
                            {% for ticketGroup in tickets %}
                                {# TODO: Move to Controller #}
                                {% set ticketCreationDueDate = ticketGroup.tickets[0]['dateToFinish'] %}
                                {% if ticketCreationDueDate is empty or ticketCreationDueDate == "0000-00-00 00:00:00" or ticketCreationDueDate == "1969-12-31 00:00:00" %}
                                    {% set ticketCreationDueDate = '' %}
                                {% endif %}
                                {% set groupProjectId = groupBy == 'projects' and ticketGroup.tickets|first is not empty ? ticketGroup.tickets[0]['projectId'] : session.currentProject %}
                                {# end TODO #}
                                <a class="anchor" id="accordion_anchor_{{ loop.index }}"></a>
                                <h5 class="accordionTitle" id="accordion_link_{{ loop.index }}">
                                    <a href="javascript:void(0)" class="accordion-toggle" id="accordion_toggle_{{ loop.index }}" onclick="accordionToggle('<?=$i ?>');">
                                        <i class="fa fa-angle-down"></i>{{ __(ticketGroup.labelName) }}
                                        ({{ ticketGroup.tickets|length }})
                                    </a>
                                    <a
                                        class="titleInsertLink"
                                        href="javascript:void(0)"
                                        onclick="insertQuickAddForm(
                                            {{ loop.index|e('js') }},
                                            {{ groupProjectId|e('js') }},
                                            {{ ticketCreationDueDate|e('js') }}
                                        )"
                                    ><i class="fa fa-plus"></i> {{ __('links.add_todo_no_icon') }}</a>
                                </h5>
                                <div id="accordion_<?=$i ?>" class="simpleAccordionContainer">
                                    <ul class="sortableTicketList">
                                        {% if ticketGroup.tickets|length %}
                                            <em>Nothing to see here. Move on.</em><br /><br />
                                        {% endif %}

                                        {% if ticketGroup.tickets is not empty %}
                                            {% for row in ticketGroup.tickets %}
                                                {# TODO: Move to controller #}
                                                    {% if row.dateToFinish == "0000-00-00 00:00:00" or row.dateToFinish == "1969-12-31 00:00:00" %}
                                                        {% set date = __('text.anytime') %}
                                                    {% else %}
                                                        {% set date = row.dateToFinish|date(__('language.dateformat')) %}
                                                    {% endif %}
                                                {# end TODO #}
                                                <li class="ui-state-default" id="ticket_{{ row.id }}" >
                                                    <div class="ticketBox fixed priority-border-<?=$row['priority']?>" data-val="{{ row.id }}">
                                                        <div class="row">
                                                            <div class="col-md-12 timerContainer" style="padding:5px 15px;" id="timerContainer-{{ row.id }}">
                                                                {% if currentUser.role > roles.editor %}
                                                                    <div class="inlineDropDownContainer">
                                                                        <a href="javascript:void(0)" class="dropdown-toggle ticketDropDown" data-toggle="dropdown">
                                                                            <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
                                                                        </a>
                                                                        <ul class="dropdown-menu">
                                                                            <li class="nav-header">{{ __("subtitles.todo") }}</li>
                                                                            <li><a href="{{ site.base_url }}/tickets/showTicket/{{ row.id }}" class='ticketModal'><i class="fa fa-edit"></i> {{ __("links.edit_todo") }}</a></li>
                                                                            <li><a href="{{ site.base_url }}/tickets/delTicket/{{ row.id }}" class="delete"><i class="fa fa-trash"></i> {{ __("links.delete_todo") }}</a></li>
                                                                            <li class="nav-header border">{{ __("subtitles.track_time") }}</li>
                                                                            <li id="timerContainer-{{ row.id }}" class="timerContainer">
                                                                                <a
                                                                                    class="punchIn"
                                                                                    href="javascript:void(0);"
                                                                                    data-value="{{ row.id }}"
                                                                                    {% if onTheClock is empty %}
                                                                                        style='display:none'
                                                                                    {% endif %}
                                                                                ><span class="fa-regular fa-clock"></span> {{ __("links.start_work") }}</a>
                                                                                <a
                                                                                    class="punchOut"
                                                                                    href="javascript:void(0);"
                                                                                    data-value="{{ row.id }}"
                                                                                    {% if onTheClock is empty or onTheClock.id != row.id %}
                                                                                        style='display:none'
                                                                                    {% endif %}
                                                                                ><span class="fa-stop"></span>
                                                                                {% if onTheClock is not empty %}
                                                                                    {{ sf(__("links.stop_work_started_at"), date(__("language.timeformat")), onTheClick.since) }}
                                                                                {% else %}
                                                                                    {{ sf(__("links.stop_work_started_at"), date(__("language.timeformat")), time()) }}
                                                                                {% endif %}
                                                                                </a>
                                                                                <span
                                                                                    class='working'
                                                                                    {% if onTheClock is empty or onTheClock.id == row.id %}
                                                                                        style='display:none;'
                                                                                    {% endif %}
                                                                                >{{ __("text.timer_set_other_todo") }}</span>
                                                                            </li>
                                                                        </ul>
                                                                    </div>
                                                                {% endif %}
                                                                <small>{{ row.projectName|e }}</small><br />
                                                                <strong><a class='ticketModal' href="{{ site.base_url }}/tickets/showTicket/{{ row.id }}" >{{ row.headline|e }}</a></strong>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-md-4" style="padding:0 15px;">
                                                                {{ __('label.due') }}<input type="text" title="{{ __('label.due') }}" value="{{ date }}" class="duedates secretInput" data-id="{{ row.id }}" name="date" />
                                                            </div>
                                                            <div class="col-md-8" style="padding-top:3px;" >
                                                                <div class="right">
                                                                    <div class="dropdown ticketDropdown effortDropdown show">
                                                                        <a class="dropdown-toggle f-left  label-default effort" href="javascript:void(0);" role="button" id="effortDropdownMenuLink{{ row.id }}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                        <span class="text">
                                                                            {{ row.storypoints is not empty and row.storypoints > 0 ? efforts[row.storypoints] : __('label.story_points_unkown') }}
                                                                        </span>
                                                                            &nbsp;<i class="fa fa-caret-down" aria-hidden="true"></i>
                                                                        </a>
                                                                        <ul class="dropdown-menu" aria-labelledby="effortDropdownMenuLink{{ row.id }}">
                                                                            <li class="nav-header border">{{ __("dropdown.how_big_todo") }}</li>
                                                                            {% for effortKey, effortValue in efforts %}
                                                                                <li class='dropdown-item'>
                                                                                    <a href='javascript:void(0);' data-value='{{ row.id }}_{{ effortKey }}' id='ticketEffortChange{{ row.id ~ effortKey }}'>{{ effortValue }}</a>
                                                                                </li>
                                                                            {% endfor %}
                                                                        </ul>
                                                                    </div>
                                                                    <div class="dropdown ticketDropdown milestoneDropdown colorized show">
                                                                        <a style="background-color:{{ row.milestoneColor|e('css') }}" class="dropdown-toggle f-left  label-default milestone" href="javascript:void(0);" role="button" id="milestoneDropdownMenuLink{{ row.id }}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                        <span class="text">
                                                                            {{ row.dependingTicketId is not empty and row.dependingTicketId != 0 ? row.milestoneHeadline|e : __('label.no_milestone') }}
                                                                        </span>
                                                                            &nbsp;<i class="fa fa-caret-down" aria-hidden="true"></i>
                                                                        </a>
                                                                        <ul class="dropdown-menu" aria-labelledby="milestoneDropdownMenuLink{{ row.id }}">
                                                                            <li class="nav-header border">{{ __("dropdown.choose_milestone") }}</li>
                                                                            <li class='dropdown-item'><a style='background-color:#1b75bb' href='javascript:void(0);' data-label="{{ __("label.no_milestone") }}" data-value='{{ row.id }}_0_#1b75bb'> {{ __("label.no_milestone") }} </a></li>
                                                                            {% for milestone in milestones[row.projectId] %}
                                                                                <li class='dropdown-item'>
                                                                                    <a href='javascript:void(0);' data-label='{{ milestone.headline|e }}' data-value='{{ row.id }}_{{ milestone.id }}_{{ milestone.tags|e }}' id='ticketMilestoneChange{{ row.id ~ milestone.id }}' style='background-color:{{ milestone.tags|e('css') }}'>{{ milestone.headline|e }}</a>
                                                                                </li>
                                                                            {% endfor %}
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </li>
                                            {% endfor %}
                                        {% endif %}
                                    </ul>
                                </div>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div> <!-- End .col-md-8 -->
        <div class="col-md-4">
            <div class="maincontentinner">
                <a href="{{ site.base_url }}/projects/showMy" class="pull-right">{{ __('links.my_portfolio') }}</a>
                <h5 class="subtitle">{{ __("headline.your_projects") }}</h5>
                <br/>
                {% if allProjects|length == 0 %}
                    <div class='col-md-12'>
                        <br /><br />
                        <div class='center'>
                            <div style='width:70%' class='svgContainer'>
                                {{ __('notifications.not_assigned_to_any_project') }}
                                {% if user.role > roles.manager %}
                                    <br /><br />
                                    <a href='{{ site.base_url }}/projects/newProject' class='btn btn-primary'>{{ __('link.new_project') }}</a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endif %}
                <ul class="sortableTicketList" id="projectProgressContainer">
                    {% for project in allProjects %}
                        {% set percentDone = project.progress.percent|round %}
                        <li>
                            <div class="col-md-12">
                                <div class="row" >
                                    <div class="col-md-12 ticketBox fixed">
                                        <div class="row" style="padding-bottom:10px;">
                                            <div class="col-md-8">
                                                <a href="{{ site.base_url }}/dashboard/show?projectId={{ project.id }}">
                                                    {{ project.clientName|e }} \\
                                                    {{ project.name|e }}
                                                </a>
                                            </div>
                                            <div class="col-md-4" style="text-align:right">
                                                {{ sf(__("text.percent_complete"), percentDone) }}
                                            </div>
                                        </div>
                                        <div class="progress">
                                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="{{ percentDone }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ percentDone|e('css') }}%">
                                                <span class="sr-only">{{ sf(__("text.percent_complete"), percentDone) }}</span>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div> <!-- End .col-md-4 -->
    </div> <!-- End .row -->
{% endblock %}

{% block scripts %}
    <script type="text/javascript">

        {{ dispatchEvent('scripts.afterOpen')|e('js') }}

        function insertQuickAddForm(index, projectId, duedate) {
            jQuery(".quickaddForm").remove();

            jQuery("#accordion_"+index+" ul").prepend('<li class="quickaddForm">'+
                ' <div class="ticketBox" id="ticket_new_'+index+'" style="padding:18px;">'+
                '<form method="post" class="form-group" action="#accordion_anchor_'+index+'">'+
                '<input name="headline" type="text" title="<?php echo $this->__("label.headline"); ?>" style="width:100%" placeholder="<?php echo $this->__("input.placeholders.what_are_you_working_on"); ?>" />'+
                '<input type="submit" value="<?php echo $this->__("buttons.save"); ?>" name="quickadd"  />'+
                '<input type="hidden" name="dateToFinish" id="dateToFinish" value="'+duedate+'" />'+
                '<input type="hidden" name="status" value="3" />'+
                '<input type="hidden" name="projectId" value="'+projectId+'" />'+
                '<input type="hidden" name="sprint" value="{{ currentSprint|e('js') }}" />&nbsp;'+
                '<a href="javascript:void(0);" onclick="jQuery(\'#ticket_new_'+index+'\').toggle(\'fast\');">'+
            '<?php echo $this->__("links.cancel"); ?>'+
            '</a>'+
            '</form></div></li>');
        }

        function accordionToggle(id) {

            let currentLink = jQuery("#accordion_toggle_"+id).find("i.fa");

                if(currentLink.hasClass("fa-angle-right")){
                    currentLink.removeClass("fa-angle-right");
                    currentLink.addClass("fa-angle-down");
                    jQuery('#accordion_'+id).slideDown("fast");
                }else{
                    currentLink.removeClass("fa-angle-down");
                    currentLink.addClass("fa-angle-right");
                    jQuery('#accordion_'+id).slideUp("fast");
                }

        }

    jQuery(document).ready(function() {
        jQuery('.todaysDate').text(moment().format('LLLL'));

            {% if user.role >= roles.editor %}
                leantime.dashboardController.prepareHiddenDueDate();
                leantime.ticketsController.initEffortDropdown();
                leantime.ticketsController.initMilestoneDropdown();
                leantime.ticketsController.initStatusDropdown();
                leantime.ticketsController.initDueDateTimePickers();
            {% else %}
                leantime.generalController.makeInputReadonly(".maincontentinner");
            {% endif %}

            {% if user.settings.modal.dashboard != true %}

                leantime.helperController.showHelperModal("dashboard", 500, 700);

                {#
                {% if user.settings.modals.dashboard is empty %}
                    {% set user.settings.modals.dashboard = 1 %}
                {% endif %}
                #}

            {% endif %}

        });

        {{ dispatchEvent('scripts.beforeClose')|e('js') }}

    </script>
{% endblock %}
