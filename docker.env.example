# Docker Environment Configuration for Leantime
# Copy this file to docker.env and customize for your local setup
# DO NOT commit docker.env to version control!

# ============================================================================
# MySQL Database Configuration
# ============================================================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=leantime
MYSQL_USER=leantime
MYSQL_PASSWORD=leantime

# ============================================================================
# Leantime Application Configuration
# ============================================================================

## Basic Settings
LEAN_APP_URL=http://localhost:8080
LEAN_APP_DIR=
LEAN_DEBUG=1
LEAN_SITENAME=Leantime Local Dev
LEAN_LANGUAGE=en-US
LEAN_DEFAULT_TIMEZONE=UTC

## Port Configuration (external port)
LEAN_PORT=8080

## Database Connection (these match MySQL settings above)
LEAN_DB_HOST=leantime_db
LEAN_DB_PORT=3306
LEAN_DB_DATABASE=leantime
LEAN_DB_USER=leantime
LEAN_DB_PASSWORD=leantime

## Session Management
# Generate a random session password:
# openssl rand -base64 32
LEAN_SESSION_PASSWORD=changeme_generate_random_string_here
LEAN_SESSION_EXPIRATION=28800
LEAN_SESSION_SECURE=false

## File Uploads (Local)
LEAN_USER_FILE_PATH=userfiles/
LEAN_DB_BACKUP_PATH=backupdb/

## Look & Feel
LEAN_LOGO_PATH=/dist/images/logo.svg
LEAN_PRINT_LOGO_URL=/dist/images/logo.png
LEAN_DEFAULT_THEME=default
LEAN_PRIMARY_COLOR=#006d9f
LEAN_SECONDARY_COLOR=#00a886

## Email Configuration (Optional for local dev)
LEAN_EMAIL_RETURN=
LEAN_EMAIL_USE_SMTP=false
LEAN_EMAIL_SMTP_HOSTS=
LEAN_EMAIL_SMTP_AUTH=true
LEAN_EMAIL_SMTP_USERNAME=
LEAN_EMAIL_SMTP_PASSWORD=
LEAN_EMAIL_SMTP_AUTO_TLS=true
LEAN_EMAIL_SMTP_SECURE=
LEAN_EMAIL_SMTP_SSLNOVERIFY=false
LEAN_EMAIL_SMTP_PORT=

## S3 Configuration (Optional)
LEAN_USE_S3=false
LEAN_S3_KEY=
LEAN_S3_SECRET=
LEAN_S3_BUCKET=
LEAN_S3_USE_PATH_STYLE_ENDPOINT=false
LEAN_S3_REGION=
LEAN_S3_FOLDER_NAME=
LEAN_S3_END_POINT=

## Redis (Currently disabled, set to false)
LEAN_USE_REDIS=false
LEAN_REDIS_URL=
LEAN_REDIS_HOST=
LEAN_REDIS_PORT=6379
LEAN_REDIS_PASSWORD=
LEAN_REDIS_SCHEME=

## LDAP (Optional - set to false for local dev)
LEAN_LDAP_USE_LDAP=false
LEAN_LDAP_LDAP_DOMAIN=
LEAN_LDAP_LDAP_TYPE=OL
LEAN_LDAP_HOST=
LEAN_LDAP_PORT=389
LEAN_LDAP_URI=
LEAN_LDAP_DN=
LEAN_LDAP_DEFAULT_ROLE_KEY=20

## OpenID Connect (Optional - set to false for local dev)
LEAN_OIDC_ENABLE=false
LEAN_OIDC_CLIENT_ID=
LEAN_OIDC_CLIENT_SECRET=
LEAN_OIDC_CREATE_USER=false
LEAN_OIDC_DEFAULT_ROLE=20

## Rate Limiting
LEAN_RATELIMIT_GENERAL=1000
LEAN_RATELIMIT_API=10
LEAN_RATELIMIT_AUTH=20

## News Service
LEAN_NEWS_ENABLED=true

## Other Settings
LEAN_DISABLE_LOGIN_FORM=false
LEAN_LOG_PATH=
